<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

    <TextView
        android:id="@+id/headingLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Bus Stops"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/paraLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Once you have found your bus stop, click on the stop to get the Bus times."
        android:layout_below="@id/headingLabel2"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/fetcheddata"
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_below="@id/paraLabel2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp" />

</android.widget.RelativeLayout>