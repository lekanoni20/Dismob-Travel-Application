<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">

    <TextView
        android:id="@+id/headingLabel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Bus Times"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/paraLabel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Please find below the latest Bus Times for the following bus stop."
            android:layout_below="@id/headingLabel4"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/paraLabel5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Bus Stop Name."
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/paraLabel4"
            android:textAlignment="center" />

        <ListView
            android:id="@+id/fetcheddata2"
            android:layout_width="match_parent"
            android:layout_height="496dp"
            android:layout_below="@id/paraLabel5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp" />
    </LinearLayout>

</android.widget.RelativeLayout>